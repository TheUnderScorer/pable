{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "ES2019",
    "module": "esnext",
    "lib": ["ES2019", "ES2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "paths": {
      "@pable/domain": ["libs/domain/src/index.ts"],
      "@pable/domain-types": ["libs/domain-types/src/index.ts"],
      "@pable/shared-server": ["libs/shared-server/src/index.ts"],
      "@pable/shared": ["libs/shared/src/index.ts"],
      "@pable/shared-frontend": ["libs/shared-frontend/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
